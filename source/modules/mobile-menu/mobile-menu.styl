.mobile-menu
	padding 20px 0

	&__list
		margin 0
		padding 0

	&__item
		padding 0 0 20px
		list-style none

	&__icon
	&__text
		display inline-block
		vertical-align middle

	&__icon
		padding-right 6px

		svg
			display block
			size 16px

	&__link
		&
		&:visited
			display block
			padding 12px 20px
			color #222
			vertical-align middle
			text-decoration none
			font-size 18px
			line-height normal

		&:hover
			color #222

	&__submenu
		margin 0
		padding 0 20px

	&__submenu &__item
		padding-bottom 0

	&__submenu &__item:last-child &__submenu-link
		border-bottom none

	&__submenu-link
		&
		&:visited
			display block
			padding 10px 20px
			border-bottom 1px solid #e2e3e4
			color #505050
			text-decoration none
			font-size 14px

		&:hover
			color #2d3e60
