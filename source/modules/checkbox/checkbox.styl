.checkbox
	position relative
	display inline-block
	cursor pointer

	&__box
		position absolute
		top 0
		left 0
		display block

		&:before
			position absolute
			display block
			content ''
			opacity 0
			transition 125ms all ease
			will-change opacity, transform

	&__control
		// 
		&:focus ~ ^[0]__box
			outline none
			border-color $form-color-border_focus
			focus($form-color-border_focus)

		&:checked + ^[0]__box:before
			opacity 1

		&:disabled ~ ^[0]__box
		&:disabled ~ ^[0]__label
			opacity 0.5

	&__label
		user-select none

	&_style_default
		& ^[0]__box
			size 20px
			border $form-border_default
			transition 125ms border-color ease

			&:before
				top 5px
				left 5px
				size 7px 4px
				border-width 0 0 3px 3px
				border-style solid
				border-color $form-color-active
				transform rotate(-45deg)

			&:disabled + ^[0]__box
				background $form-color-background - 8%

		& ^[0]__label
			padding-left 32px

			+below(1024px)
				padding-top 10px
				padding-bottom 10px

	&_type_toggle-sw&_style_default
		min-width 42px
		min-height 22px

		& ^[0]__box
			width $form-size-input-height
			height ($form-size-input-height / 2)
			border-radius 50px
			background-color #dddddd
			transition 125ms all ease-in-out

			&:before
				top 1px
				bottom 1px
				left 1px
				display block
				margin-left 0
				size 18px
				border none
				border-radius 50%
				background $form-color-background
				box-shadow 0 2px 5px rgba(#000, 0.3)
				opacity 1
				transform none

		& ^[0]__control
			&:checked + ^[0]__box
				border-color $form-color-active
				background-color $form-color-active

			&:checked + ^[0]__box:before
				margin-left 50%
				transform none

			&:disabled + ^[0]__box
				border-color $form-color-border
				background $form-color-background - 8%

		& ^[0]__label
			padding-left 52px
