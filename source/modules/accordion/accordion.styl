.accordion
	width 100%

	&__trigger
		position relative
		display flex
		box-sizing border-box
		padding 12px 24px
		min-height 48px
		transition min-height 150ms cubic-bezier(0.4, 0, 0.2, 1), background-color 150ms cubic-bezier(0.4, 0, 0.2, 1)
		user-select none

		&:hover
			cursor pointer

		&::after
			position absolute
			top 50%
			right 20px
			display block
			margin-top -5px
			size 6px
			border-width 0 2px 2px 0
			border-style solid
			border-color #535353
			content ""
			transition 150ms all ease-in-out 0s
			transform rotate(45deg)
			transform-origin 75% 75%

		&:focus
			// background-color #e0e0e0

	&__item
		position relative
		background-color #fff
		box-shadow 0px 1px 3px 0px rgba(#000, 0.2), 0px 1px 1px 0px rgba(#000, 0.14), 0px 2px 1px -1px rgba(#000, 0.12)
		transition margin 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms

		&::before
			position absolute
			top -1px
			right 0
			left 0
			height 1px
			background-color rgba(0, 0, 0, 0.12)
			content ""
			opacity 1
			transition opacity 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms, background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms

		&:first-child
			border-top-left-radius 2px
			border-top-right-radius 2px

			&::before
				display none

		&:last-child
			border-bottom-right-radius 2px
			border-bottom-left-radius 2px

	&__item[data-accordion-item="true"]
		margin 16px 0

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

		&::before
			opacity 0

		& + ^[0]__item
			&::before
				display none

	&__panel
		visibility hidden
		overflow hidden
		height 0
		opacity 0
		transition height 300ms cubic-bezier(0.4, 0, 0.2, 1)

	[data-accordion-item="true"] &__panel
		visibility visible
		overflow auto
		padding 8px 24px 24px
		height auto
		opacity 1

	[data-accordion-item="true"] &__trigger
		&::after
			transform rotate(225deg)

	&__item_disabled
		background-color rgba(0, 0, 0, 0.12)
		pointer-events none

		& ^[0]__trigger
			opacity 0.5
