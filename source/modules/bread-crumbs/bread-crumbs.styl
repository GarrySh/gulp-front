.bread-crumbs
	&__list
		margin 0
		padding 0

	&__item
	&__separator
	&__link
		display inline-block
		vertical-align middle

	&__item
		padding 0
		color #111
		list-style none
		font-size 14px

	&__link
		&
		&:visited
			text-decoration none

		&:hover
			text-decoration underline

	&__separator
		padding 0 3px
		color #333

		svg
			size 5px 10px
			fill #666
