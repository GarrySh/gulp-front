.card
	position relative
	box-sizing border-box
	box-shadow 0 5px 15px rgba(#000, 0.08)
	transition 125ms box-shadow ease-in-out
	will-change box-shadow

	a
	button
	input
		position relative
		z-index 1000

	&__body
		padding em(40px)

		a
			&
			&:hover
				color inherit

	&__title
		margin-bottom 1.2em
		font-size em(24px)
		line-height 1.4

		&:first-letter
			text-transform uppercase

	&__meta
		color #999
		font-size em(14px)
		line-height 1.4

	&__media
		display block
		margin 0

		img
			display block
			width 100%
			height 100%

	&__link
		position absolute !important
		top 0
		right 0
		bottom 0
		left 0
		z-index 100

	&__header
	&__footer
		padding em(20px) em(40px)

	// Sizes
	&_size_small
	&_size_s
		font-size 75%

	&_size_medium
	&_size_m
		font-size 100%

	&_size_large
	&_size_l
		font-size 125%

	// Styles
	&_style_hover
		&:hover
			box-shadow 0 14px 25px rgba(#000, 0.16)

	// Colors
