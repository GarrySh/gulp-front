.card-media
	margin 0
	display block
	position relative

	&__image
		width 100%
		height 100%
		display block

	&__overlay
		display block
		position absolute
		bottom 0
		left 0
		right 0
		background rgba(#000, 0.8)
		color #fff
		padding 1em 1.5em

	&__title
		font-size 1.4em
		margin 0
		font-family notosans
		padding-bottom 0.25em

	&__subtitle
		margin 0
