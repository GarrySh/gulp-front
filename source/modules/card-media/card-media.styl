.card-media
	position relative
	display block
	margin 0

	&__image
		display block
		width 100%
		height 100%

	&__overlay
		position absolute
		right 0
		bottom 0
		left 0
		display block
		padding 1em 1.5em
		background rgba(#000, 0.8)
		color #fff

	&__title
		margin 0
		padding-bottom 0.25em
		font-size 1.4em

	&__subtitle
		margin 0
