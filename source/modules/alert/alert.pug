include ../icon/icon

mixin alert(data)
	- var classes = ["alert"]
	if data.type
		- classes.push(classes[0] + "_type_" + data.type)

	if data.color
		- classes.push(classes[0] + "_color_" + data.color)

	div(class=classes)&attributes(attributes)
		.alert__title= data.title
		.alert__body= data.text

		button(type="button" data-plugin-alert="close").alert__close
			+icon(name="close" title="Close")
			span.visuallyhidden Close this message
