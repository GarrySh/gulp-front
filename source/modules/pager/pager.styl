.pager
	&__control
		&
		&:visited
			display inline-block
			display inline-block
			padding-right 0.8em
			padding-left 0.8em
			height 2.5em
			border 1px solid #cdcdcd
			border-radius 50em
			background-color #fff
			color currentColor
			vertical-align middle
			text-align center
			text-decoration none
			line-height 2.5em

		&:hover
			border-color #0083ca
			background-color #0083ca
			color currentColor
			color #fff
			text-decoration none
