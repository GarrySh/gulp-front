.pagination
	margin 26px 0

	&__controls
		display inline-block

	&__controls_backward
		// 

	&__controls_forward
		// 

	&__control
	&__page
		&
		&:visited
			display inline-block
			display inline-block
			padding-right 0.7em
			padding-left 0.7em
			min-width 18px
			height 2.5em
			border 1px solid #cdcdcd
			border-radius 50em
			background-color #fff
			color currentColor
			vertical-align middle
			text-align center
			text-decoration none
			line-height 2.5em

		&:hover
			border-color #0083ca
			background-color #0083ca
			color currentColor
			color #fff
			text-decoration none

	&__page
		// 

	&__page_current
		border-color #0083ca
		background-color #0083ca
		color #fff

	&__ellipsis
		padding 0 1em
		color #666
