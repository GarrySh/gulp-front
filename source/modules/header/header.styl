.header
	background linear-gradient(180deg, #2d3e60, #1e3c72 + 10%)

	+print()
		page-break-after always

	padding 115px 0 35px

	+below($content-width)
		padding-top 70px

	&__inner
		margin 0 auto
		max-width $content-width
		clearfix()

	&__top
		position fixed
		top 0
		z-index 1000
		box-sizing border-box
		padding 1em 0
		width 100%
		transition padding 0.5s ease 0, background 0.5s ease 0, box-shadow 0.5s ease 0

		+below($content-width)
			m-padding()

		+below(750px)
			padding-top 0
			padding-right 0
			padding-bottom 0

		+print()
			display none !important

	&__logo
	&__menu
		float left

	&__logo
		margin-right 40px
		padding-top 5px
		width 190px

		+below(980px)
			float none
			margin 0
			padding-bottom 30px
			width auto
			text-align center

		+below(750px)
			float left
			padding-top 12px
			padding-bottom 0
			width 190px

	&__menu
		padding-top 5px
		width 600px

	&__mobile-menu-trigger
		display none

		+below(750px)
			display block
			float right

	&__github
		float right
		padding-top 5px
		width 110px

	&__bottom
		padding 70px 0

		+below($content-width)
			m-padding()

	&__menu
	&__github
		+below(750px)
			display none

	&_fixed &__top
		background #2d3e60
		box-shadow 0 2px 3px rgba(#000, 0.04)
