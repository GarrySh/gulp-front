.header
	display flex
	align-items center
	padding $mobile-padding
	background #fff
	box-shadow 0 2px 6px 0 rgba(#b0bac5, 0.6)

	+print()
		display none !important
		page-break-after always

	&__logo
		margin-right 5em

	&__menu
		// 

	&__mobile-menu-trigger
		display none

		+below(750px)
			display block

	&__github-button
		&
		&:visited
			margin-left auto
			padding 0.5em
			color $blue-6

		&:hover
			color $blue-8
