.radio
	position relative
	display inline-block
	cursor pointer

	&__box
		position absolute
		top 0
		left 0
		display block

		&:before
			position absolute
			display block
			content ""
			opacity 0
			transition 125ms all ease
			will-change opacity, transform

	&__control
		&:focus ~ ^[0]__box
			outline none
			border-color $form-color-border_focus
			focus($form-color-border_focus)

		&:checked + ^[0]__box:before
			opacity 1

		&:disabled ~ ^[0]__box
		&:disabled ~ ^[0]__label
			opacity 0.5

	&__label
		user-select none

	&_style_default
		& ^[0]__box
			size ($form-size-input-height / 2)
			border $form-border_default
			border-radius 50%
			transition 125ms border-color ease

			&:before
				top 6px
				left 6px
				size 8px
				border-radius 50%
				background-color $form-color-active
				opacity 0

			&:disabled + ^[0]__box
				background $form-color-background - 8%

		& ^[0]__label
			padding-left 32px

			+below(1024px)
				padding-top 10px
				padding-bottom 10px
