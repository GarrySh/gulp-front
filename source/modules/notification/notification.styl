@keyframes fadeinup
	0%
		opacity 0
		transform translateY(-15px) 

	30%
		opacity 0.8
		transform translateY(-3px) 

	100%
		opacity 1
		transform translateY(0) 


@keyframes fadeoutdown
	0%
		opacity 1
		transform translateY(0)

	30%
		opacity 0.2
		transform translateY(-3px)

	100%
		opacity 0
		transform translateY(-15px)

@keyframes appear
	0%
		opacity 0

	30%
		opacity 0.5

	100%
		opacity 0.8

@keyframes disappear
	0%
		opacity 0.8

	30%
		opacity 0.1

	100%
		opacity 0


.notification-container
	position fixed
	bottom 20px
	right 30px
	width 25%
	color white
	z-index 9999
	+below(736px)
		width 90%
		margin 0 auto
		display block
		right 0
		left 0


	&__item
		position relative
		margin-bottom 15px
		transition-duration 125ms
		transition-timing-function ease
		transition-property all


.notification
	background-color #fff
	border-radius 3px
	padding 15px 15px 15px 60px
	box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.45);
	color rgba(#000, 0.4)
	position relative
	animation fadeinup 0.3s forwards
	&::before
		content ''
		left 20px
		top 16px
		size 24px
		position absolute
		background-position 0 0
		background-repeat no-repeat
		opacity 0
		animation appear 0.5s forwards
		animation-delay 0.25s

	&__close
		border none
		background transparent
		padding 0
		margin 0
		cursor pointer
		position absolute
		right 0
		top 0
		height 24px
		width 24px
		transition 125ms all ease-in-out
		text-align center
		color inherit
		&:after
			content '\00d7'
			font-size 1.2em
			display inline
			color currentColor
			

		&:hover
			opacity 0.8

	&__message
		opacity 0
		animation fadeinup 0.3s forwards
		animation-delay 0.15s
		a
			&
			&:visited
				color currentColor

			&:hover
				text-decoration none
				color currentColor
	
	&_disappear
		animation fadeoutdown 0.3s 1 forwards
		animation-delay 0.25s

		& ^[0]__message
			opacity 1
			animation fadeoutdown 0.3s 1 forwards
			animation-delay 0.1s
		
		& ^[0]::before
			opacity 1
			animation disappear 0.3s 1 forwards
	
	&_type_info
		&::before
			filter opacity(0.4)
			background-image url(../images/notification__info.svg)

	&_type_notice
		background-color blue
		color #fff
		&::before
			filter invert(1)
			background-image url(../images/notification__notice.svg)

	&_type_success
		background-color green
		color #fff
		&::before
			filter invert(1)
			background-image url(../images/notification__success.svg)

	&_type_error
		background-color red
		color #fff
		&::before
			filter invert(1)
			background-image url(../images/notification__error.svg)

	&_type_warning
		background-color yellow
		color $base-text-color
		&::before
			background-image url(../images/notification__warning.svg)
