.page
	position relative

	&__content
		position relative
		top 0
		left 0
		z-index 1
		background $base-bg-color
		transition 125ms all ease-in-out
		transition 125ms left ease

	&__header
		margin-bottom 50px

	&__main
		margin 0 auto
		padding-bottom 60px
		max-width $content-width

	&__mobile-menu
		position fixed
		top 0
		right 0
		right 0
		bottom 0
		z-index 10
		visibility hidden
		overflow-y auto
		width 80%
		background-color #f3f3f3
		opacity 0
		transition 125ms all ease-in-out
		-webkit-overflow-scrolling touch

	&__overlay
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		z-index 1
		visibility hidden
		background-color rgba(#000, 0.3)
		opacity 0
		transition 125ms all ease-in-out
