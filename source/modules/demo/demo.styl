.buttons-demo
	.button
		margin-bottom 20px

	.button-group
		margin-bottom 20px

		&__item
			margin 0

			&:last-child
				margin-left -1px

.demo-icons
	.icon
		display inline-block
		margin 5px
		padding 20px
		width 34px
		height 34px
		box-shadow 0 1px 5px rgba(22, 20, 17, 0.16)

	.flag
		width 34px
		height 26px

		&_squared
			width 34px
			height 34px

.demo-grid
	&__item
		display inline-block
		box-sizing border-box
		margin 10px

.demo-grid-item
	display flex
	flex-direction column
	justify-content space-between
	text-align center

	&__container
		display flex
		justify-content center
		align-items center
		margin-bottom 1em
		height 100%
		// 

	&__title
		color #666

.card-demo
	display flex
	flex-wrap wrap
	justify-content space-between
	align-items flex-start

	.card
		margin-bottom 30px
		width 400px
