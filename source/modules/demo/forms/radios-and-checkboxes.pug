+form-item().form__item
	.form-item__control
		+fieldset({ "legend": "Radios" })
			.fieldset__item
				+radio(
					id="form-demo__radio-1" 
					name="form-demo__radio-group-1"
				).radio_style_default Normal
			.fieldset__item
				+radio(
					id="form-demo__radio-2" 
					name="form-demo__radio-group-1" 
					checked
				).radio_style_default Checked
			.fieldset__item
				+radio(
					id="form-demo__radio-3" 
					name="form-demo__radio-group-2" 
					disabled
				).radio_style_default Normal Disabled
			.fieldset__item
				+radio(
					id="form-demo__radio-4" 
					name="form-demo__radio-group-2" 
					checked 
					disabled
				).radio_style_default Checked and Disabled


