include ../../form-item/form-item
include ../../label/label
include ../../input/input

+form-item().form__item
	.form-item__label
		+label(for="form-demo__input-inline") Inline input
	.form-item__control
		+input(
			type="text" 
			name="form-demo__input-inline"
			id="form-demo__input-inline"
			value="Input value"
		)


+form-item().form__item
	.form-item__label
		+label(for="form-demo__input-block") Full width input
	.form-item__control
		+input(
			type="text" 
			name="form-demo__input-block" 
			id="form-demo__input-block" 
			value="Input value"
			block
		)


