extends page

include ../modules/mobile-menu/mobile-menu
include ../modules/scroll-top/scroll-top
include ../modules/header-presentation/header-presentation


block page
	.page__mobile-menu(data-offcanvas-menu aria-hidden="true")
		+mobile-menu(mainMenu.default)

	.page__content
		.page__wrapper
			.page__header
				block header

			.page__presentation
				+header-presentation(headerPresentation.default)

			.page__main
				block main

		.page__footer
			block footer
	
	.page__overlay(data-offcanvas-overlay)




